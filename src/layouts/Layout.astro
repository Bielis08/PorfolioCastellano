---
import ViewTransitions from 'astro/components/ViewTransitions.astro';

import BtnSubir from '../components/BtnSubir.astro';
import Fondo from '../components/Fondo.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import '@fontsource-variable/onest';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Apuntes Castellano" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="google-site-verification" content="mn4dz0tEkLrQXBBK2p7VTrOWq5GMInNS5rs3WCK0nKM" />
		<title>{title}</title>
	</head>
	<body>
		<Header/>
		<slot />
		<!-- <BtnSubir/> -->
		<Footer></Footer>
		<Fondo/>
		<ViewTransitions/>
	</body>
</html>
<style is:global>
	html {
		font-family: 'Onest Variable', system-ui, sans-serif;
		background: #F8FAFC;
		color: #1e293b;
	}
</style>
