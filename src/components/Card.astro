---
const { title, info, info2, subtitle} = Astro.props
---

<article class="bg-emerald-50 w-80 lg:w-[350px] py-6 px-2 rounded-3xl border-dashed border-black border-2 hover:scale-105 transition">
    <h2 class="text-2xl text-center font-semibold">{title}</h2>
    <section class="text-left pl-5 mt-4 text-lg">
        <p>{info}</p>
        <br>
        <p>{info2}</p>
        <h5 class="text-xl font-medium mt-5">{subtitle}</h5>
        <section class="pl-5 mt-4 text-lg">
            <slot/>
        </section>
        
    </section>
</article>