---
import BtnInicio from "../components/BtnInicio.astro";
import Layout from "../layouts/Layout.astro";

const books = [
    {
        title: 'La Celestina',
        author: 'Fernando de Rojas',
        image: '/La_celestina_libro.jpg',
        url: '/la_celestina'
    },
    {
        title: 'El Lazarillo de Tormes',
        author: 'Anónimo',
        image: '/El_lazarillo_libro.jpg',
        url: '/el_lazarillo_de_tormes'
    },
    // {
    //     title: 'Rimas y Leyendas',
    //     author: 'Bécquer',
    //     image: '/Rimas_y_Leyendas_libro.jpg',
    //     url: '/rimas_y_leyendas'
    // }
];
---
<Layout title="Lecturas Trimestrales - Apuntes de Castellano">
    <main class="max-w-[1400px] mx-auto px-6 mb-14 mt-28 md:mt-36 text-center">
        <BtnInicio />
        <head>
            <h1 class="text-4xl font-semibold mt-20 mb-2">Lecturas Trimestrales</h1>
            <h2 class="text-2xl font-light mb-14">La Celestina y El Lazarillo de Tormes</h2>
        </head>
        <section>
            <ul class="flex flex-wrap justify-center gap-6">
                {books.map((book, index) => (
                    <a href={book.url} class="bg-white shadow-md rounded-lg overflow-hidden hover:scale-105 transition cursor-pointer">
                        <img src={book.image} alt={book.title} class="w-full h-96 object-cover" />
                        <div class="p-6">
                            <h3 class="text-xl font-semibold mb-2">{book.title}</h3>
                            <p class="text-gray-700">{book.author}</p>
                        </div>
                    </a>
                ))}
            </ul>
        </section>
    </main>
</Layout>
