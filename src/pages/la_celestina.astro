---
import Layout from "../layouts/Layout.astro";
import BtnInicio from "../components/BtnInicio.astro"
import { capitulos } from "../lib/capitulos";
---

<Layout title="La Celestina - Apuntes de Castellano">
    <main class="max-w-[1400px] mx-auto px-6 mb-14 mt-28 md:mt-36 text-center">
        <BtnInicio/>
        <head>
            <h1 class="text-4xl font-semibold mt-20 mb-2">La Celestina</h1>
            <h2 class="text-2xl font-light mb-14">Fernando de Rojas</h2>
        </head>
        <img class="max-h-[550px] mx-auto rounded-lg" src="/La_celestina_libro.jpg" alt="Libro de la Celestina de Fernando de Rojas">
        <section class="text-left mt-20 md:mt-32">
            <h2 class="text-3xl font-medium">Resumen por capítulos</h2>
            <ul class="bg-gray-50 border-2 border-black rounded-xl max-w-[550px] list-disc pl-10 mx-auto py-3 text-md md:text-lg mt-10 md:mt-16">
                <li><span class="font-semibold">Título (Actual):</span> "La Celestina"</li>
                <li><span class="font-semibold">Título (Inicial):</span> "La Tragicomedia de Calisto y Melibea"</li>
                <li><span class="font-semibold">Autor:</span> Fernando de Rojas</li>
                <li><span class="font-semibold">Año de publicación:</span> 1499 (Siglo: finales XV)</li>
            </ul>
        </section>
        <section class="text-left mt-10 md:mt-16">
            <h2 class="text-3xl font-medium">Resumen por capítulos</h2>
            <section class="grid place-content-center mt-16">
                {
                    capitulos.map(capitulo =>(
                        <article class="bg-gray-50 border-2 max-w-[600px] hover:scale-105 transition border-black rounded-xl my-4 mx-2 md:mx-12 py-4 px-3 md:px-6">
                            <h3 class="text-xl font-medium">Capítulo {capitulo.capitulo}</h3>
                            <p class="mx-3 my-4 md:mx-8 text-md md:text-lg">{capitulo.resumen}</p>
                        </article>
                    ))
                }
            </section>
        </section>
    </main>
</Layout>