---
import BtnInicio from "../components/BtnInicio.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Literatura Renacentista - Apuntes de Castellano">
    <main class="max-w-[1400px] mx-auto px-6 mb-14 mt-28 md:mt-36 text-center">
        <BtnInicio/>
        <head>
            <h1 class="text-4xl font-semibold mt-20 mb-2">Literatura Renacentista</h1>
            <h2 class="text-center text-2xl font-light mb-14">Contexto histórico y principales autores</h2>
        </head>
        <img class="my-10 mx-auto rounded-2xl h-[400px]" src="Literatura_renacimiento.jpg" alt="Imagen de la literatura del Renacimiento">
        <h2 class="text-3xl font-semibold text-left ml-2 lg:ml-28 mt-10 md:mt-16">Contexto Histórico</h2>
        <section class="text-left">
            <h3 class="text-2xl font-semibold ml-2 lg:ml-28 mt-10 md:mt-16 mb-6">Características</h3>
            <div class="mx-8 sm:mx-12 lg:mx-40">
                
            </div>
        </section>
    </main>
</Layout>